<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.aansturing.AansturingFragment">

    <Button
        android:id="@+id/btnLinks"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="Naar links"
        android:backgroundTint="#2717ff"
        android:textColor="#fff"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnRechts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="Naar rechts"
        android:backgroundTint="#EC2525"
        android:textColor="#fff"
        app:layout_constraintStart_toEndOf="@+id/btnLinks"
        app:layout_constraintTop_toTopOf="@+id/btnLinks" />

    <!-- rood = #EC2525 groen = #6Dff17 geel = #efff17 blauw = #2717ff -->

</androidx.constraintlayout.widget.ConstraintLayout>